<!DOCTYPE html>
<html>
<head>
    <title>{% block head_title %}{% endblock %}</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {% block head_meta %}{% endblock %}
    {% block head_css %}
        <link rel="stylesheet" href="{{ asset('bundles/fsiadmin/css/bootstrap.min.css') }}" type="text/css" media="all" />
        <link rel="stylesheet" href="{{ asset('bundles/fsiadmin/css/bootstrap-responsive.min.css') }}" type="text/css" media="all" />
        <link rel="stylesheet" href="{{ asset('bundles/fsiadmin/css/style.css') }}" type="text/css" media="all" />
    {% endblock %}
</head>
<body>
{% block themes %}{% endblock %}
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container-fluid">
            <a class="brand" href="{{ path('fsi_admin') }}">{{ 'admin.title'|trans({}, 'FSiAdminBundle')  }}</a>
            {% block navigation_top %}
            {{ knp_menu_render('top', {'template': '@FSiAdmin/Admin/knp_menu.html.twig', 'currentClass' : 'active'}) }}
            {% endblock %}
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row-fluid">
        {% block navigation_left %}
            <div id="sidebar" class="span2">
                <div class="well">
                    {{ knp_menu_render('left', {'template': '@FSiAdmin/Admin/knp_menu.html.twig', 'currentClass' : 'active'}) }}
                </div>
            </div>
        {% endblock %}
        {% block content %}
        {% endblock %}
    </div>
</div>
{% block javascripts %}
    <script src="{{ asset('bundles/fsiadmin/js/jquery-1.9.1.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/fsiadmin/js/bootstrap.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/fsiadmin/js/script.js') }}" type="text/javascript"></script>
{% endblock %}
</body>
</html>