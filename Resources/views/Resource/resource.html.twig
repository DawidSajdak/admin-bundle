{% extends admin_templates_base %}

{% block themes %}
    {% form_theme form admin_templates_resource_form_theme %}
{% endblock themes %}

{% block content %}
    <div class="col-lg-12">
        <form action="{{ path('fsi_admin_resource', {element: element.id, id: id}) }}" method="post" {{ form_enctype(form) }} class="form-horizontal well">
            {{ form_widget(form) }}
            <div class="control-group">
                <div class="controls">
                    <button type="submit" class="btn btn-default">{{ 'resource.button.save'|trans({}, 'FSiAdminBundle')  }}</button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}