<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="admin.doctrine.context.resource.class">FSi\Bundle\AdminBundle\Doctrine\Admin\Context\Resource\ResourceContext</parameter>
        <parameter key="admin.doctrine.context_builder.resource.class">FSi\Bundle\AdminBundle\Doctrine\Admin\Context\Resource\ResourceContextBuilder</parameter>
        <parameter key="admin.doctrine.context.resource.request_handler.create_form_submit.class">FSi\Bundle\AdminBundle\Doctrine\Admin\Context\Request\ResourceFormSubmitHandler</parameter>
        <parameter key="admin.doctrine.context.resource.request_handler.create_form_valid_request.class">FSi\Bundle\AdminBundle\Doctrine\Admin\Context\Request\ResourceFormValidRequestHandler</parameter>
    </parameters>

    <services>
        <service id="admin.doctrine.context_builder.resource" class="%admin.doctrine.context_builder.resource.class%">
            <argument type="service" id="admin.doctrine.context.resource"/>
            <tag name="admin.context.builder" />
        </service>

        <service id="admin.doctrine.context.resource" class="%admin.doctrine.context.resource.class%">
            <argument type="collection">
                <argument type="service" id="admin.doctrine.context.resource.request_handler.create_form_submit"/>
                <argument type="service" id="admin.doctrine.context.resource.request_handler.create_form_valid_request"/>
            </argument>
            <argument type="service" id="form.factory"/>
            <argument type="service" id="fsi_resource_repository.map_builder" on-invalid="ignore"/>
        </service>

        <service id="admin.doctrine.context.resource.request_handler.create_form_submit"
                 class="%admin.doctrine.context.resource.request_handler.create_form_submit.class%">
            <argument type="service" id="event_dispatcher" />
        </service>

        <service id="admin.doctrine.context.resource.request_handler.create_form_valid_request"
                 class="%admin.doctrine.context.resource.request_handler.create_form_valid_request.class%">
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="router" />
        </service>
    </services>
</container>
